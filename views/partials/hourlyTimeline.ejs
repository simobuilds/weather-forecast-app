<% if (typeof hourlyCards !== 'undefined' && hourlyCards.length > 0) { %>
<div class="container mt-5">
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
        <div class="d-flex align-items-center">
            <h3 class="text-white mb-0"><i class="fas fa-calendar-alt me-2"></i> Forecast Timeline</h3>
            <span class="badge <%= forecastStep == 1 ? 'bg-success' : 'bg-info' %> ms-3">
                <i class="fas <%= forecastStep == 1 ? 'fa-bolt' : 'fa-clock' %> me-1"></i>
                <%= forecastStep == 1 ? 'Pro 1-Hour Precision' : 'Standard 3-Hour Steps' %>
            </span>
        </div>
        
        <div class="btn-group" role="group">
            <form action="/set-step" method="POST" class="d-inline">
                <input type="hidden" name="step" value="3">
                <button type="submit" class="btn btn-sm <%= forecastStep == 3 ? 'btn-primary' : 'btn-outline-light' %>">3h Steps</button>
            </form>
            <form action="/set-step" method="POST" class="d-inline">
                <input type="hidden" name="step" value="1">
                <button type="submit" class="btn btn-sm <%= forecastStep == 1 ? 'btn-primary' : 'btn-outline-light' %>">1h Steps (Pro)</button>
            </form>
        </div>
    </div>

    <% hourlyCards.forEach(card => { %>
        <div class="weather-card p-0 mb-5 shadow-lg" style="background: rgba(0, 0, 0, 0.2); border-radius: 20px; overflow: hidden;">
            <div class="p-3 bg-dark bg-opacity-50 d-flex justify-content-between align-items-center">
                <h4 class="m-0 notranslate"><i class="fas fa-map-marker-alt text-danger me-2"></i><%= card.name %></h4>
                <small class="text-white-50">Scroll right for more data →</small>
            </div>
            
            <div class="hourly-scroll-container">
                <% card.hours.forEach(hour => { %>
                    <div class="text-center hourly-item">
                        <p class="date-label text-info fw-bold mb-1" style="font-size: 0.75rem;">
                            <%= new Date(hour.dt * 1000).toLocaleDateString([], { weekday: 'short', day: 'numeric' }) %>
                        </p>
                        <p class="time-label text-white mb-2">
                            <%= new Date(hour.dt * 1000).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                        </p>
                        
                        <div class="icon-wrapper mb-2">
                            <img src="https://openweathermap.org/img/wn/<%= hour.weather[0].icon %>@2x.png" width="50" alt="icon">
                        </div>
                        
                        <p class="temp-label h5 mb-1"><%= Math.round(hour.main.temp) %>°</p>
                        
                        <div class="extra-details border-top border-white border-opacity-10 pt-2 mt-2 mb-2" style="font-size: 0.85rem; background: rgba(255, 255, 255, 0.03); border-radius: 8px; padding: 8px;">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-white-50"><i class="fas fa-tint text-info"></i></span>
                                <span class="text-white ms-2"><%= hour.humidity %>%</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-white-50"><i class="fas fa-wind text-secondary"></i></span>
                                <span class="text-white ms-2"><%= Math.round(hour.wind.speed) %>m/s</span>
                            </div>
                        </div>
<p class="desc-label text-capitalize fw-normal mt-2" 
   style="font-size: 0.95rem; color: #ffffff; line-height: 1.1; min-height: 2.2em; display: flex; align-items: center; justify-content: center;">
    <%= hour.weather[0].description %>
</p>
                    </div>
                <% }) %>
            </div>
        </div>
    <% }) %>
</div>
<% } %>